<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormNama"
    android:background="@drawable/bg_nama">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_nama1"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_nama2"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_nama3"/>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <TextView
            android:id="@+id/titleNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang"
            android:layout_centerInParent="true"
            android:textSize="28dp"
            android:textColor="@color/red"
           style="@style/label_title"/>

        <TextView
            android:layout_below="@id/titleNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="di Aplikasi Cerdas TB"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="@color/red"
            style="@style/label_desc"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/layout1"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <EditText
            android:id="@+id/cNama"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ripple_effect_white"
            android:layout_height="35dp"
            android:elevation="4dp"
            android:paddingLeft="20dp"
            android:hint="isi nama anda"
            />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_below="@id/cNama"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Submit"
            android:textSize="16dp"
            android:textColor="@color/white"
            style="@style/Btn_slide"
            android:textAllCaps="false"
            android:background="@drawable/ripple_effect_red"
            android:layout_centerInParent="true"/>


    </RelativeLayout>



</RelativeLayout>