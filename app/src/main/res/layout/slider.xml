<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/slider"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/bg_slide1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <ImageView
            android:id="@+id/icon_slide"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_medicine"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <TextView
            android:id="@+id/title_slide"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengingat Minum Obat"
            style="@style/label_title"/>

        <TextView
            android:id="@+id/desc_slide"
            android:layout_below="@id/title_slide"
            android:textAlignment="center"
            android:layout_marginTop="35dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lorem ipsum"
            style="@style/label_title"/>

    </RelativeLayout>




</LinearLayout>